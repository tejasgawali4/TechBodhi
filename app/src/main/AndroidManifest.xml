        <activity
            android:name=".ViewPosts"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".MainActivity"
            android:label="@string/title_activity_login" />
        <activity
            android:name=".RegisterUser"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".ViewUsers"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".ApproveUsers"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".ApprovePosts"
            android:theme="@style/AppTheme"/>
        <activity
            android:name=".ViewPostDetails"
            android:theme="@style/AppTheme"/>

        <activity
            android:name=".UserLoginActivity"
            android:label="@string/title_activity_user_login"
            android:theme="@style/AppTheme.NoActionBar"></activity>

        <activity
            android:name=".UserPanelViewPost"
            android:theme="@style/AppTheme"/>

        <activity
            android:name=".UserPanelViewPostDetails"
            android:theme="@style/AppTheme"/>

        <activity
            android:name=".AdminPanelViewUserDetails"
            android:theme="@style/AppTheme"/>

        <activity
            android:name=".UserPanelViewProfileInfo"
            android:theme="@style/AppTheme"/>

        <activity
            android:name=".EditUserProfile"
            android:theme="@style/AppTheme"/>
