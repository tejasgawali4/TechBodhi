<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/bg_parent_corner"
    android:weightSum="1">


    <GridLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/feed_item_margin"
        android:layout_marginRight="@dimen/feed_item_margin"
        android:layout_marginTop="@dimen/feed_item_margin"
        android:orientation="vertical"
        android:paddingBottom="@dimen/feed_item_padding_top_bottom"
        android:paddingTop="@dimen/feed_item_padding_top_bottom"
        android:padding="0dp"
        android:layout_gravity="bottom"
        android:layout_margin="0dp"
        android:layout_weight="0.10">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/feed_item_padding_left_right"
            android:paddingRight="@dimen/feed_item_padding_left_right"
            android:layout_margin="5dp">

            <com.android.volley.toolbox.NetworkImageView
                android:id="@+id/postPic"
                android:layout_width="@dimen/feed_item_profile_pic"
                android:layout_height="@dimen/feed_item_profile_pic"
                android:scaleType="fitCenter"
                android:background="@drawable/businessman">
            </com.android.volley.toolbox.NetworkImageView>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="@dimen/feed_item_profile_info_padd"
                android:gravity="center_horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/feed_item_profile_info_padd"
                    android:layout_weight="1.23"
                    android:gravity="center_horizontal"
                    android:weightSum="1">

                    <TextView
                        android:id="@+id/u_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/timestamp"
                        android:textSize="@dimen/feed_item_timestamp"
                        android:paddingBottom="15dp"
                        android:textStyle="bold"
                        android:paddingLeft="5dp"
                        android:paddingStart="5dp"
                        android:layout_weight="0.45"
                        android:padding="5dp"
                        android:layout_margin="0dp" />

                    <EditText
                        android:id="@+id/u_firstname"
                        android:layout_width="99dp"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/feed_item_profile_name"
                        android:textStyle="bold"
                        android:paddingLeft="5dp"
                        android:padding="5dp" />

                    <EditText
                        android:id="@+id/u_lastname"
                        android:layout_width="99dp"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/feed_item_profile_name"
                        android:textStyle="bold"
                        android:paddingLeft="5dp"
                        android:padding="5dp" />

                </LinearLayout>

                <EditText
                    android:id="@+id/username"
                    android:layout_width="262dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/timestamp"
                    android:textSize="@dimen/feed_item_timestamp"/>

            </LinearLayout>

        </LinearLayout>



        <TextView
            android:id="@+id/Basic"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="5dp"
            android:text="Basic Details"
            android:paddingLeft="@dimen/feed_item_status_pad_left_right"
            android:paddingRight="@dimen/feed_item_status_pad_left_right"
            android:paddingTop="@dimen/feed_item_status_pad_top"
            android:gravity="center_horizontal"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:textStyle="normal|bold"
            android:background="@color/colorPrimary"
            android:layout_marginTop="10dp"
            android:layout_margin="5dp"
            android:padding="5dp" />

        <!--Date of birth & Email-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:padding="0dp"
                android:layout_width="150dp">

                <TextView
                    android:id="@+id/dob"
                    android:layout_height="wrap_content"
                    android:text="DOB :"
                    android:textStyle="bold"
                    android:layout_width="60dp" />

                <EditText
                    android:id="@+id/dateob"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="5dp"
                    android:paddingLeft="@dimen/feed_item_status_pad_left_right"
                    android:paddingRight="@dimen/feed_item_status_pad_left_right"
                    android:paddingTop="@dimen/feed_item_status_pad_top"
                    android:padding="0dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:padding="0dp"
                android:layout_margin="0dp">

                <TextView
                    android:id="@+id/email"
                    android:layout_height="wrap_content"
                    android:text="Email :"
                    android:textStyle="bold"
                    android:layout_width="60dp" />

                <EditText
                    android:id="@+id/Email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:linksClickable="true"
                    android:paddingBottom="5dp"
                    android:paddingLeft="@dimen/feed_item_status_pad_left_right"
                    android:paddingRight="@dimen/feed_item_status_pad_left_right"
                    android:textColorLink="@color/link" />

            </LinearLayout>

        </LinearLayout>


        <!--contact & Gender-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:layout_width="150dp">

                <TextView
                    android:id="@+id/cont"
                    android:layout_height="wrap_content"
                    android:text="Mobile :"
                    android:textStyle="bold"
                    android:layout_width="60dp" />

                <EditText
                    android:id="@+id/contact"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="5dp"
                    android:paddingLeft="@dimen/feed_item_status_pad_left_right"
                    android:paddingRight="@dimen/feed_item_status_pad_left_right"
                    android:paddingTop="@dimen/feed_item_status_pad_top"
                    android:padding="0dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:layout_margin="0dp">

                <TextView
                    android:id="@+id/gen"
                    android:layout_height="wrap_content"
                    android:text="Gender :"
                    android:textStyle="bold"
                    android:layout_width="60dp" />

                <EditText
                    android:id="@+id/gender"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:linksClickable="true"
                    android:paddingBottom="5dp"
                    android:paddingLeft="@dimen/feed_item_status_pad_left_right"
                    android:paddingRight="@dimen/feed_item_status_pad_left_right"
                    android:textColorLink="@color/link" />

            </LinearLayout>

        </LinearLayout>


        <!--      Address-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:weightSum="1">

            <TextView
                android:id="@+id/Add"
                android:layout_height="wrap_content"
                android:text="Address :"
                android:textStyle="bold"
                android:layout_width="60dp" />

            <EditText
                android:id="@+id/Address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="5dp"
                android:paddingLeft="@dimen/feed_item_status_pad_left_right"
                android:paddingRight="@dimen/feed_item_status_pad_left_right"
                android:paddingTop="@dimen/feed_item_status_pad_top"
                android:padding="0dp" />

        </LinearLayout>


        <TextView
            android:id="@+id/education"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="5dp"
            android:text="Educational Details"
            android:paddingLeft="@dimen/feed_item_status_pad_left_right"
            android:paddingRight="@dimen/feed_item_status_pad_left_right"
            android:paddingTop="@dimen/feed_item_status_pad_top"
            android:gravity="center_horizontal"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:textStyle="normal|bold"
            android:background="@color/colorPrimary"
            android:layout_margin="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:padding="5dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="1"
                    android:background="@android:drawable/progress_horizontal"
                    android:padding="5dp"
                    android:layout_margin="5dp">

                    <TextView
                        android:id="@+id/course"
                        android:layout_height="wrap_content"
                        android:text="Course "
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:layout_width="70dp"
                        android:layout_weight="0.27"
                        android:gravity="center" />

                    <TextView
                        android:id="@+id/Stream"
                        android:layout_height="wrap_content"
                        android:text="Stream "
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:layout_width="70dp"
                        android:layout_weight="0.27"
                        android:gravity="center" />

                    <TextView
                        android:id="@+id/Year"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:layout_width="70dp"
                        android:textColor="@color/white"
                        android:layout_weight="0.30"
                        android:gravity="center"
                        android:text="Year of Passing" />

                    <TextView
                        android:id="@+id/Percentage"
                        android:layout_height="wrap_content"
                        android:text="Percentage "
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:layout_width="70dp"
                        android:layout_weight="0.15"
                        android:gravity="center" />

                </LinearLayout>

                <!--POst Graduation-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="1"
                    android:background="#b1a9a9"
                    android:padding="5dp"
                    android:layout_margin="5dp">


                    <TextView
                        android:id="@+id/PG1"
                        android:layout_height="wrap_content"
                        android:text="PG "
                        android:textStyle="bold"
                        android:layout_width="70dp"
                        android:layout_weight="0.27"
                        android:gravity="center" />

                    <EditText
                        android:id="@+id/PG"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:layout_width="70dp"
                        android:layout_weight="0.27"
                        android:gravity="center" />

                    <EditText
                        android:id="@+id/PG_YEAR"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:layout_width="70dp"
                        android:layout_weight="0.30"
                        android:gravity="center"/>

                    <EditText
                        android:id="@+id/PG_PER"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:layout_width="70dp"
                        android:layout_weight="0.15"
                        android:gravity="center" />

                </LinearLayout>

                <!--Graduation-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="1"
                    android:background="#b1a9a9"
                    android:padding="5dp"
                    android:layout_margin="5dp">

                    <TextView
                        android:id="@+id/UG1"
                        android:layout_height="wrap_content"
                        android:text="UG "
                        android:textStyle="bold"
                        android:layout_width="70dp"
                        android:layout_weight="0.27"
                        android:gravity="center" />

                    <EditText
                        android:id="@+id/UG"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:layout_width="70dp"
                        android:layout_weight="0.27"
                        android:gravity="center" />

                    <EditText
                        android:id="@+id/UG_YEAR"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:layout_width="70dp"
                        android:layout_weight="0.30"
                        android:gravity="center"/>

                    <EditText
                        android:id="@+id/UG_PER"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:layout_width="70dp"
                        android:layout_weight="0.15"
                        android:gravity="center" />

                </LinearLayout>
                <!--Diploma-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="1"
                    android:background="#b1a9a9"
                    android:padding="5dp"
                    android:layout_margin="5dp">

                    <TextView
                        android:id="@+id/Dip"
                        android:layout_height="wrap_content"
                        android:text="Diploma "
                        android:textStyle="bold"
                        android:layout_width="70dp"
                        android:layout_weight="0.27"
                        android:gravity="center" />

                    <EditText
                        android:id="@+id/Diploma"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:layout_width="70dp"
                        android:layout_weight="0.27"
                        android:gravity="center" />

                    <EditText
                        android:id="@+id/DiplomaYear"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:layout_width="70dp"
                        android:layout_weight="0.30"
                        android:gravity="center"/>

                    <EditText
                        android:id="@+id/DiplomaPercentage"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:layout_width="70dp"
                        android:layout_weight="0.15"
                        android:gravity="center" />

                </LinearLayout>
                <!--HSC-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="1"
                    android:background="#b1a9a9"
                    android:padding="5dp"
                    android:layout_margin="5dp">

                    <TextView
                        android:id="@+id/hs1c"
                        android:layout_height="wrap_content"
                        android:text="HSC"
                        android:textStyle="bold"
                        android:layout_width="70dp"
                        android:layout_weight="0.27"
                        android:gravity="center" />

                    <EditText
                        android:id="@+id/HSC"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:layout_width="70dp"
                        android:layout_weight="0.27"
                        android:gravity="center" />

                    <EditText
                        android:id="@+id/HSC_Year"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:layout_width="70dp"
                        android:layout_weight="0.30"
                        android:gravity="center" />

                    <EditText
                        android:id="@+id/HSC_per"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:layout_width="70dp"
                        android:layout_weight="0.15"
                        android:gravity="center" />

                </LinearLayout>
                <!--SSC-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="1"
                    android:background="#b1a9a9"
                    android:padding="5dp"
                    android:layout_margin="5dp">

                    <TextView
                        android:id="@+id/S"
                        android:layout_height="wrap_content"
                        android:text="SSC"
                        android:textStyle="bold"
                        android:layout_width="70dp"
                        android:layout_weight="0.27"
                        android:gravity="center" />

                    <EditText
                        android:id="@+id/SSC"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:layout_width="70dp"
                        android:layout_weight="0.27"
                        android:gravity="center" />

                    <EditText
                        android:id="@+id/SSC_Year"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:layout_width="70dp"
                        android:layout_weight="0.30"
                        android:gravity="center"/>

                    <EditText
                        android:id="@+id/SSC_per"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:layout_width="70dp"
                        android:layout_weight="0.15"
                        android:gravity="center" />

                </LinearLayout>

                <Button
                    android:id="@+id/btnEditUserProfile"
                    android:layout_width="wrap_content"
                    android:layout_height="32dp"
                    android:linksClickable="true"
                    android:paddingLeft="@dimen/feed_item_status_pad_left_right"
                    android:paddingRight="@dimen/feed_item_status_pad_left_right"
                    android:text="Update User Profile"
                    android:background="?android:attr/panelColorBackground"
                    android:shadowColor="@android:color/holo_blue_bright"
                    android:gravity="center"
                    android:textAppearance="@style/TextAppearance.AppCompat.Widget.Button.Inverse"
                    android:layout_gravity="bottom|center"
                    android:layout_margin="15dp"
                    android:textColorLink="@android:color/white" />

    </GridLayout>
</RelativeLayout>
</ScrollView>